{
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=18.13.0",
        "npm": ">=8.19.3"
    },
    "scripts": {
        "serve": "wireit",
        "dev": "wireit",
        "build": "wireit",
        "tsc": "wireit",
        "rollup": "wireit"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-terser": "^0.4.3",
        "@rollup/plugin-typescript": "^11.1.1",
        "@web/dev-server": "^0.2.1",
        "rollup": "^2.79.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-minify-html-literals": "^1.2.6",
        "typescript": "^5.0.4",
        "wireit": "^0.9.5"
    },
    "dependencies": {
        "big-dom-generator": "file:../../big-dom-generator",
        "lit": "^3.0.0-pre.0",
        "tslib": "^2.5.2"
    },
    "wireit": {
        "serve": {
            "dependencies": [
                "build"
            ],
            "files": [
                "standalone/web-dev-server.config.js"
            ],
            "service": true,
            "command": "wds --root-dir standalone/dist"
        },
        "dev": {
            "#comment": "like serve, only it doesn't do the slow rollup build",
            "dependencies": [
                "tsc"
            ],
            "files": [
                "web-dev-server.config.js"
            ],
            "service": true,
            "command": "wds"
        },
        "build": {
            "dependencies": [
                "tsc",
                "rollup"
            ]
        },
        "tsc": {
            "files": [
                "src/**/*.ts",
                "tsconfig.json"
            ],
            "output": [
                "standalone/index.js",
                "standalone/index.js.map",
                "standalone/lib",
                "standalone/.tsbuildinfo"
            ],
            "clean": false,
            "command": "tsc"
        },
        "rollup": {
            "files": [
                "src/**/*.ts",
                "standalone/rollup.config.mjs"
            ],
            "output": [
                "standalone/dist/index.js"
            ],
            "command": "rollup --config standalone/rollup.config.mjs"
        }
    }
}
